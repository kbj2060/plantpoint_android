<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plantpoint.ui.login.SignUpFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/type_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="유형"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="MissingConstraints" />


        <RadioGroup
            android:id="@+id/type_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:layout_weight="1"
                android:text="일반"
                android:id="@+id/radio_consumer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:layout_weight="1"
                android:text="농부"
                android:id="@+id/radio_supplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <TextView
            android:id="@+id/id_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="아이디"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/id_edit"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_edittext"
            android:hint="example@email.com"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/pw_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="비밀번호"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/pw_edit"
            android:inputType="textPassword"
            android:background="@drawable/custom_edittext"
            android:layout_width="200dp"
            android:layout_height="30dp" />


        <TextView
            android:id="@+id/pw_check_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="비밀번호 확인"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/pw_check_edit"
            android:inputType="textPassword"
            android:background="@drawable/custom_edittext"
            android:layout_width="200dp"
            android:layout_height="30dp" />


        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="이름"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="TextViewEdits" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_edittext"

            android:inputType="textShortMessage"
            android:privateImeOptions="defaultInputmode=korean"
            />

        <TextView
            android:id="@+id/reg_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="주민등록번호"
            android:maxLength="6"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="TextViewEdits" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/reg_front"
                android:layout_weight="1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_edittext"
                android:maxLength="8"
                android:hint="19940428"
                android:gravity="center"
                android:inputType="textShortMessage"
                android:privateImeOptions="defaultInputmode=korean"
                />
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:text="-" />

            <EditText
                android:id="@+id/reg_back"
                android:layout_width="20dp"
                android:background="@drawable/custom_edittext"
                android:maxLength="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:inputType="textShortMessage"
                android:privateImeOptions="defaultInputmode=korean"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center"
                android:text="******" />
        </LinearLayout>
        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="주소"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="TextViewEdits" />

        <EditText
            android:id="@+id/address_edit"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_edittext"
            android:inputType="textShortMessage"
            android:privateImeOptions="defaultInputmode=korean"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/save_user"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="저장"
                android:layout_marginRight="10dp"
                android:background="@drawable/positive_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/cancel_signup"
                android:gravity="center"
                android:text="취소"
                android:background="@drawable/negative_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
    </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>